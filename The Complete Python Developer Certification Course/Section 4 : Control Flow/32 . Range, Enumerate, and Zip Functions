# 7 .
mynum = [1,2,3,4,5]
words = ['hello','my','name','is','nurlan']
combinedItems = zip(mynum, words)
print(combinedItems)
# answer : <zip object at 0x0000025958A20CC0>

# 8 .
mynum = [1,2,3,4,5]
words = ['hello','my','name','is','nurlan']
combinedItems = zip(mynum, words)
for item in combinedItems:
    print(item)
# answer :
# (1, 'hello')
# (2, 'my')
# (3, 'name')
# (4, 'is')
# (5, 'nurlan')

