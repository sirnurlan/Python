# 1 .
word = "hello"
mylist = list(word)
print(mylist)
# answer : ['h', 'e', 'l', 'l', 'o']

# 2 .
word = "hello"
for letter in list(word):
    print(letter)
# answer :
# h
# e
# l
# l
# o

